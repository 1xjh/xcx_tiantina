.order_quit_main {
  width: 90%;
  margin: 0 auto;
}
.order_quit_main .quit_cause {
    margin-top: 36rpx;
    font-size: 28rpx;
    font-family: Source Han Sans CN;
    font-weight: bold;
    color: #555555;
}
.order_quit_main .order_quit_text {
    position: relative;
    border: 1rpx solid #eee;
    border-radius: 30rpx;
    font-size: 28rpx;
}
.order_quit_main .order_quit_text .number_font {
      position: absolute;
      right: 10rpx;
      bottom: 10rpx;
}
.order_quit_main .slect_list_box {
    margin-top: 57rpx;
}
.order_quit_main .slect_list_box .list_item {
      height: 64rpx;
      width: 48%;
      text-align: center;
      font-size: 24rpx;
      font-family: Source Han Sans CN;
      font-weight: 400;
      border-radius: 32rpx;
      line-height: 60rpx;
      border: 1px solid #cccccc;
      margin-top: 22rpx;
}
.order_quit_main .slect_list_box .list_item.active {
        background: #267656;
        color: white;
}
.reservation_bottom {
  margin-top: 44rpx;
  font-family: Source Han Sans CN;
  color: #555555;
  margin-bottom: 110rpx;
}
.reservation_bottom .content {
    font-size: 24rpx;
    font-weight: 400;
    line-height: 45rpx;
    margin-top: 10rpx;
}
.reservation_bottom .content .left {
      width: 30rpx;
}
