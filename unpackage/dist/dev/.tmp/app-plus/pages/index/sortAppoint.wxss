page {
  background: #FFFFFF;
}
.appoint_main {
  width: 90%;
  margin: 0 auto;
}
.appoint_main .appoint_title {
    margin: 40rpx 0rpx 20rpx 0rpx;
    font-size: 30rpx;
    font-family: Source Han Sans CN;
    font-weight: bold;
    color: #555555;
}
.appoint_main .appoint_title .t2 {
      margin-left: 46%;
}
.appoint_content {
  width: 100%;
}
.appoint_content .lianz {
    margin-right: 10rpx;
}
.appoint_content view {
    width: 24%;
    height: 60rpx;
    border-radius: 30rpx;
    color: #555555;
    text-align: center;
    margin-top: 20rpx;
    line-height: 60rpx;
    border: 1rpx solid 0, 0, 0, 0.2;
    -webkit-box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
            box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
}
.number_select {
  width: 100%;
}
.number_select .bottom {
    height: 64rpx;
    width: 64rpx;
    border-radius: 30rpx;
    background: #fff;
    position: absolute;
    text-align: center;
    line-height: 64rpx;
    font-size: 50rpx;
    border: 1rpx solid 0, 0, 0, 0.2;
    -webkit-box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
            box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
}
.people_number {
  width: 47%;
  position: relative;
  height: 64rpx;
  background: #F0F3F5;
  border-radius: 40rpx;
}
.people_number .minus {
    left: 0rpx;
}
.people_number .add {
    right: 0;
}
.people_number .number {
    text-align: center;
    font-size: 30rpx;
    width: 100%;
    height: 64rpx;
    line-height: 64rpx;
}
.room_number {
  width: 47%;
  position: relative;
  height: 64rpx;
  background: #F0F3F5;
  border-radius: 40rpx;
}
.room_number .minus {
    left: 0rpx;
}
.room_number .add {
    right: 0;
}
.room_number .number {
    text-align: center;
    font-size: 30rpx;
    width: 100%;
    height: 64rpx;
    line-height: 64rpx;
}
.room_type {
  width: 100%;
}
.room_type .button {
    width: 47%;
    height: 100rpx;
    border-radius: 50rpx;
    background: #fff;
    text-align: center;
    border: 1rpx solid 0, 0, 0, 0.2;
    -webkit-box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
            box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2);
    margin-top: 20rpx;
}
.room_type .button .room_type_t1 {
      font-size: 30rpx;
      margin-top: 15rpx;
      font-family: Source Han Sans CN;
      font-weight: 500;
      color: #555555;
}
.room_type .button .room_type_t2 {
      font-size: 25rpx;
      font-family: Source Han Sans CN;
      font-weight: 400;
      color: #555555;
}
.room_type image {
    width: 22rpx;
    height: 28rpx;
}
.sort_site_bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background: white;
  -webkit-box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.5);
          box-shadow: 0px 4px 8px 0px rgba(0, 0, 0, 0.5);
  line-height: 110rpx;
}
.sort_site_bottom .left {
    width: 40%;
    text-align: center;
}
.sort_site_bottom .right {
    width: 60%;
}
