.list_item_box {
  background: white;
  border-radius: 20rpx;
  padding: 37rpx 24rpx 32rpx 32rpx;
  font-family: Source Han Sans CN;
  margin-top: 30rpx;
}
.list_item_box .left_title {
    width: 150rpx;
}
.room_order_number {
  font-size: 28rpx;
  font-weight: 400;
  color: #555555;
  line-height: 56rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.room_order_number .order_status {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
    font-weight: bold;
    text-align: right;
}
.room_order_number .order_number {
    white-space: nowrap;
}
.room_order_number .order_today {
    height: 40rpx;
    line-height: 40rpx;
    background: white;
    border: 1px solid #555555;
    border-radius: 17px;
    font-size: 24rpx;
    font-weight: 400;
    color: #555555;
    text-align: center;
    padding: 0rpx 16rpx;
    margin-left: 45rpx;
}
.room_order_number .order_today text {
      color: #267656;
}
.room_order_bottom {
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
      -ms-flex-pack: end;
          justify-content: flex-end;
  margin-top: 50rpx;
}
.room_order_bottom .button {
    height: 54rpx;
    line-height: 54rpx;
    border: 1px solid #555555;
    border-radius: 27px;
    margin-left: 30rpx;
    padding: 0rpx 20rpx;
}
.room_order_bottom .action {
    color: #267656;
    border: 2rpx solid #267656;
}
.room_order_title {
  font-size: 28rpx;
  font-weight: bold;
  color: #555555;
  line-height: 56rpx;
}

